<div class='row'>
  <div class='col-auto'>
    <h2>Welcome!</h2>
    <a href="/api/categories/addcategory" class="btn btn-outline-success">Add Category</a>
  </div>
</div>
<div class='row mt-4'>
  <div class='col-md-12'>
    {{#if allCategories.length}}
      <div class='col-md-12 project-list'>
        <h3>Categories</h3>

        {{#each allCategories as |category|}}
          <div class='card'>
            <div class='row mb-2'>
              <div class='col-md-8'>
                <h4><a
                    href='/api/categories/{{category.id}}/plants'
                  >{{category.name}}</a></h4>
              </div>
              <div class='col-md-4'>

                <button
                  class='btn btn-sm btn-danger'
                  id='delete-btn'
                  data-id='{{category.id}}'
                >DELETE</button>
                {{!-- <button
                  class='btn btn-sm'
                  id='update-btn'
                  data-id='{{category.id}}'
                >UPDATE</button> --}}
              </div>
            </div>
          </div>

        {{/each}}
      </div>
    {{/if}}

  </div>
</div>

<script src='../js/category.js'></script>