    <form class='form category-form'>
      <div class='form-group'>
        <label for='category-name'>name:</label>
        <input class='form-input' type='text' id='catgeory-name' />

      <div class='form-group'>
        <button
          id='submit-btn'
          data-category='{{category_id}}'
          class='btn btn-outline-success'
          type='submit'
        >ADD Category</button>
      </div>
    </form>
  </div>
  </div>

</div>

